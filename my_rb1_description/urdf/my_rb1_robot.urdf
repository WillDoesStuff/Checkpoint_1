<?xml version="1.0" ?>

<robot name="robot">

    <!-- Footprint -->
    <link name="base_footprint"/>

    <!-- Joint - Laser -->
    <joint name="joint_front_laser" type="fixed">
        <origin rpy="3.1415 0 0" xyz="0.25 0.0 0.075" />
        <child link="front_laser" />
        <parent link="base_link" />
    </joint>
    <!-- Link - Laser -->
    <link name="front_laser"/>

    <!-- Joint - Base -->
    <joint name="joint_base_link" type="fixed">
        <origin rpy="0 0 0" xyz="0.0 0.0 0.15" />
        <child link="base_link" />
        <parent link="base_footprint" />
    </joint>
    <!-- Link - Base -->
    <link name="base_link">
        <inertial>
            <mass value="21" />
            <origin rpy="0 0 0" xyz="0.0 0 0.0" />
            <inertia ixx="0.485625" ixy="0" ixz="0" iyy="0.485625" iyz="0" izz="0.65625" />
        </inertial>

        <collision>
            <geometry>
                <cylinder length="0.3" radius="0.25"/>
            </geometry>
        </collision>

        <visual>
            <geometry>
                <cylinder length="0.3" radius="0.25"/>
            </geometry>
            <material name="Blue">
                <color rgba="0 0 1 1" />
            </material>
        </visual> 
    </link>
    
    <!-- Joint - chassis / left wheel -->
    <joint name="joint_left_wheel" type="continuous">
        <origin rpy="0 0 0" xyz="0.0 -0.2 -0.15" />
        <child link="left_wheel" />
        <parent link="base_link" />
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>
    <!-- Link - left wheel -->
    <link name="left_wheel">
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.00098958333" ixy="0" ixz="0" iyy="0.00098958333" iyz="0" izz="0.0003125"/>
        </inertial>

        <!-- Tires -->
        <collision>
            <origin rpy="-1.5701 0 0" xyz="0.0 0 0" />
            <geometry>
                <cylinder length="0.1" radius="0.025"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="-1.5701 0 0" xyz="0.0 0 0" />
            <geometry>
                <cylinder length="0.1" radius="0.025"/>
            </geometry>
            <material name="Red">
                <color rgba="1 0 0 1" />
            </material>
        </visual>
    </link>

    <!-- Joint - chassis / right wheel -->
    <joint name="joint_right_wheel" type="continuous">
        <origin rpy="0 0 0" xyz="0.0 0.2 -0.15" />
        <child link="right_wheel" />
        <parent link="base_link" />
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>
    <!-- Link - left wheel -->
    <link name="right_wheel">
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.00098958333" ixy="0" ixz="0" iyy="0.00098958333" iyz="0" izz="0.0003125"/>
        </inertial>

        <!-- Tires -->
        <collision>
            <origin rpy="-1.5701 0 0" xyz="0.0 0 0" />
            <geometry>
                <cylinder length="0.1" radius="0.025"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="-1.5701 0 0" xyz="0.0 0 0" />
            <geometry>
                <cylinder length="0.1" radius="0.025"/>
            </geometry>
            <material name="Red">
                <color rgba="1 0 0 1" />
            </material>
        </visual>
    </link>

    <!-- Joint - chassis / front caster -->
    <joint name="joint_front_caster" type="continuous">
        <origin rpy="0 0 0" xyz="-0.1 0.0 -0.15" />
        <child link="front_caster" />
        <parent link="base_link" />
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="0.0" />
    </joint>
    <!-- Link - front caster -->
    <link name="front_caster">
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.00041666666" ixy="0" ixz="0" iyy="0.00041666666" iyz="0" izz="0.00041666666"/>
        </inertial>

        <!-- Caster -->
        <collision>
            <origin rpy="0 0 0" xyz="0.0 0 0" />
            <geometry>
                <sphere radius="0.025" />
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0.0 0 0" />
            <geometry>
                <sphere radius="0.025" />
            </geometry>
            <material name="Red">
                <color rgba="1 0 0 1" />
            </material>
        </visual>
    </link>

    <!-- Joint - chassis / back caster -->
    <joint name="joint_back_caster" type="continuous">
        <origin rpy="0 0 0" xyz="0.1 0.0 -0.15" />
        <child link="back_caster" />
        <parent link="base_link" />
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="0.0" />
    </joint>
    <!-- Link - back caster -->
    <link name="back_caster">
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.00041666666" ixy="0" ixz="0" iyy="0.00041666666" iyz="0" izz="0.00041666666"/>
        </inertial>

        <!-- Caster -->
        <collision>
            <origin rpy="0 0 0" xyz="0.0 0 0" />
            <geometry>
                <sphere radius="0.025" />
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0.0 0 0" />
            <geometry>
                <sphere radius="0.025" />
            </geometry>
            <material name="Red">
                <color rgba="1 0 0 1" />
            </material>
        </visual>
    </link>

</robot>